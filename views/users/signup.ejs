<% layout("/layouts/boilerplate.ejs") %>

<div class="form-container">
    <h1 class="form-heading">Sign Up On ROAM ROSTER</h1>
    <form action="/signup" method="POST" novalidate class="form-card needs-validation">
        <div class="form-group">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" id="username" placeholder="username" class="form-input" required>
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Username field should not be empty</div>
        </div>

        <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="email" placeholder="example@example.com" class="form-input" required>
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Email field should not be empty</div>
        </div>

        <div class="form-group">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" placeholder="password" class="form-input" required>
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Password field should not be empty</div>
        </div>

        <div class="form-group">
            <label for="dob" class="form-label">Date Of Birth</label>
            <div class="row dob-row">
                <div class="col-4">
                    <select name="day" id="dob-day" class="form-select" required>
                        <option value="" disabled selected>Day</option>
                        <% for (let i = 1; i <= 31; i++) { %>
                            <option value="<%= i %>"><%= i %></option>
                        <% } %>
                    </select>
                </div>
                <div class="col-4">
                    <select name="month" id="dob-month" class="form-select" required>
                        <option value="" disabled selected>Month</option>
                        <% const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]; %>
                        <% months.forEach((month, index) => { %>
                            <option value="<%= index + 1 %>"><%= month %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="col-4">
                    <select name="year" id="dob-year" class="form-select" required>
                        <option value="" disabled selected>Year</option>
                        <% for (let i = new Date().getFullYear(); i >= 1900; i--) { %>
                            <option value="<%= i %>"><%= i %></option>
                        <% } %>
                    </select>
                </div>
            </div>
            <div class="invalid-feedback">Please provide a valid date of birth</div>
        </div>

        <div class="form-group">
            <label for="gender" class="form-label">Gender</label>
            <div class="gender-options">
                <label class="form-check-label">
                    <input type="radio" name="gender" value="male" required> Male
                </label>
                <label class="form-check-label">
                    <input type="radio" name="gender" value="female" required> Female
                </label>
                <label class="form-check-label">
                    <input type="radio" name="gender" value="custom" required> Custom
                </label>
            </div>
            <div class="invalid-feedback">Please select your gender</div>
        </div>

        <button type="submit" class="form-button signup-button">Sign Up</button>
    </form>
</div>


