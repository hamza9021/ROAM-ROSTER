<% layout("/layouts/boilerplate.ejs") %>
<div class="form-container">
    <div class="form-box">
        <h3 class="form-title">Create New Listing</h3>
        <form action="/listings" method="post" novalidate class="needs-validation"  enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" placeholder="enter catchy title" class="form-control" required>
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">Title should be valid</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">Description is necessary</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image Link</label>
                <input type="file" name="listing[image]" placeholder="enter image URL/LINK" class="form-control" required>
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">Enter correct url link</div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listing[price]" placeholder="2000" class="form-control" required>
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Valid price is necessary</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" placeholder="Pakistan" class="form-control" required>
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Enter country name</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="catogery" class="form-label">Catogery</label>
                <select id="catogery" name="listing[catogery]" class="form-control">
                    <option  value="mountains">Mountains</option>
                    <option  value="city">City</option>
                    <option  value="castles">Castles</option>
                    <option value="countryside">CountrySide</option>
                    <option  value="villas">Villas</option>
                    <option  value="beach">Beach</option>
                    <option  value="bungalows">Bungalows</option>
                    <option  value="ski resorts">Ski Resorts</option>
                    <option  value="igloos">Igloos</option>
                    <option  value="forests">Forests</option>
                </select>
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">Location should be necessary</div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" placeholder="Sahiwal, Punjab" class="form-control" required>
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">Location should be necessary</div>
            </div>
            
            <button class="btn-add">Add</button>
        </form>
    </div>
</div>
